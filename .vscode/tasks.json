{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: build",
			"detail": "webpack --mode development"
		},
		{
			"label": "serve",
			"type": "shell",
			"command": "npx",
			"args": [
				"http-server",
				".",
				"-p",
				"8000",
				"-c-1"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*HTTP server is running.*",
					"endsPattern": "^.*$"
				}
			},
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}
